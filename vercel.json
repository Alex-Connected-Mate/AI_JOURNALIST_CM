{
  "framework": "nextjs",
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "cleanUrls": true,
  "regions": ["cdg1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "skipBuild": true,
        "installCommand": "npm install",
        "buildCommand": "npm run vercel-build",
        "outputDirectory": ".next",
        "nodeVersion": "22.x"
      }
    }
  ],
  "env": {
    "NEXT_TYPECHECK": "false",
    "NEXT_WEBPACK_TYPECHECK": "false",
    "NEXT_MINIMAL_ERROR_HANDLING": "true"
  }
} 