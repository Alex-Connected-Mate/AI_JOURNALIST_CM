{
  "version": 2,
  "buildCommand": "bash ./vercel.sh",
  "installCommand": "npm install",
  "framework": null,
  "outputDirectory": ".next",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "skipTypeCheck": true,
        "nodeVersion": "18.x"
      }
    }
  ],
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_TYPECHECK": "false",
    "NODE_OPTIONS": "--max_old_space_size=4096"
  }
} 